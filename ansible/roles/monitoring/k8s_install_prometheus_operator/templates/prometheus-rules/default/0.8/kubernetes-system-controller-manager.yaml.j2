---
apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  name: "kubernetes-system-controller-manager"
  namespace: {{ k8s_namespace }}
spec:
{% if not prometheus_rules.kubeControllerManager %}
  groups: []
{% else %}
  groups:
  - name: kubernetes-system-controller-manager
    rules:
    {% if prometheus_alerts.kubeControllerManagerDown %}
    - alert: KubeControllerManagerDown
      annotations:
        description: KubeControllerManager has disappeared from Prometheus target discovery.
        runbook_url: https://github.com/prometheus-operator/kube-prometheus/wiki/kubecontrollermanagerdown
        summary: Target disappeared from Prometheus target discovery.
      expr: absent(up{job="{{ prometheus_operator_chart_release_name }}-kube-controller-manager"} == 1)
      for: 15m
      labels:
        severity: critical
        notify_team: {{ prometheus_alert_teams.barekube }}
    {% endif %}
{% endif %}
