---
apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  name: "ceph-mds-status"
  namespace: {{ k8s_namespace }}
spec:
{% if not prometheus_rules.ceph %}
  groups: []
{% else %}
  groups:
  - name: ceph-mds-status
    rules:
    - alert: CephMdsMissingReplicas
      annotations:
        description: Minimum required replicas for storage metadata service not available. Might affect the working of storage cluster.
        message: Insufficient replicas for storage metadata service.
        severity_level: warning
        storage_type: ceph
      expr: sum(ceph_mds_metadata{job="ceph-exporter"} == 1) by (namespace) < 2
      for: 5m
      labels:
        severity: warning
        notify_team: {{ prometheus_alert_teams.ceph }}
{% endif %}
