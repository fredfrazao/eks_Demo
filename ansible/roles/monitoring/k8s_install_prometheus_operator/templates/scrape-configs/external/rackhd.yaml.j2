{% if prometheus_monitor_components.external.rackhd  %}
  {% if groups['rackhd'] is defined and (groups['rackhd'] | length > 0) %}
- job_name: 'rackhd-node-exporter'
  honor_labels: true
  static_configs:
    - targets:
    {% for host in groups['rackhd'] %}
      - {{ hostvars[host].metrics_exporter_ip +":"+(node_exporter_port | string) }}
    {% endfor %}
  {% endif %}
{% endif %}
