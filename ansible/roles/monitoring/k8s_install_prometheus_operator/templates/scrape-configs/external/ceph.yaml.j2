{% if prometheus_monitor_components.external.ceph  %}
  {% if groups['all_ceph_mgr_node'] is defined and (groups['all_ceph_mgr_node'] | length > 0) %}
- job_name: 'ceph-exporter'
  honor_labels: true
  static_configs:
    - targets:
    {% for host in groups['all_ceph_mgr_node'] %}
      - {{ hostvars[host].metrics_exporter_ip +":"+(ceph_exporter_port | string) }}
    {% endfor %}
  {% endif %}
{% endif %}
