{% if prometheus_monitor_components.external.storageNodes  %}
  {% if groups['storage_node'] is defined and (groups['storage_node'] | length > 0) %}
- job_name: 'storage-node-exporter'
  honor_labels: true
  static_configs:
    - targets:
    {% for host in groups['storage_node'] %}
      - {{ hostvars[host].metrics_exporter_ip +":"+(node_exporter_port | string) }}
    {% endfor %}
  {% endif %}
{% endif %}
