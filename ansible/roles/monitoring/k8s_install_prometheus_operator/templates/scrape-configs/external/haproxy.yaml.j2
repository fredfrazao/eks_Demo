{% if prometheus_monitor_components.external.haproxy %}
  {% if groups['haproxy'] is defined and (groups['haproxy'] | length > 0) %}
- job_name: 'haproxy-node-exporter'
  honor_labels: true
  static_configs:
    - targets:
    {% for host in groups['haproxy'] %}
      - {{ hostvars[host].metrics_exporter_ip +":"+(node_exporter_port | string) }}
    {% endfor %}
  {% endif %}
{% endif %}
