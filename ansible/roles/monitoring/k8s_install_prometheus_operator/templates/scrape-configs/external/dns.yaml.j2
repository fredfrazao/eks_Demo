{% if prometheus_monitor_components.external.dns  %}
  {% if groups['dns'] is defined and (groups['dns'] | length > 0) %}
- job_name: 'dns-node-exporter'
  honor_labels: true
  static_configs:
    - targets:
    {% for host in groups['dns'] %}
      - {{ hostvars[host].metrics_exporter_ip +":"+(node_exporter_port | string) }}
    {% endfor %}
  {% endif %}
{% endif %}
